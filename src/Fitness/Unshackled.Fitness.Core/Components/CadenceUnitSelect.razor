<MudSelect T="CadenceUnits" Label="@Label" FullWidth="true" Variant="Variant.Outlined" 
		Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">
	@foreach (var item in EnumUtils.GetValues<CadenceUnits>())
	{
		<MudSelectItem T="CadenceUnits" Value="@item">@item.Label()</MudSelectItem>
	}
</MudSelect>

@code {
	[Parameter] public string Label { get; set; } = "Cadence Unit";
	[Parameter] public CadenceUnits Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<CadenceUnits> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.None;
}
