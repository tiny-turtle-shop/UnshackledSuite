@page "/activity-templates/{ActivityTemplateSid}"
@inherits SingleBase

<DynamicPageTitle IsLoading="@IsLoading" LoadingTitle="Loading Template" FallbackTitle="Template" Title="Template" />

<MudBreadcrumbs Items="Breadcrumbs"></MudBreadcrumbs>

@if (IsLoading)
{
	<DefaultProgress />
}
else
{
	@if (!string.IsNullOrEmpty(TemplateModel.Sid))
	{
		@if (IsMemberActive)
		{
			<MudToolBar Gutters="false" Class="mb-4">
				<MudSpacer />
				<EditModeSwitch @bind-IsEditMode="@IsEditMode" Disabled="@(IsEditing || IsWorking)" />
			</MudToolBar>
		}

		<SectionProperties @bind-Template="@TemplateModel" ActivityTypes="@ActivityTypes" IsEditMode="@IsEditMode" DisableSectionControls="@DisableControls"
						   OnIsEditingSectionChange="@HandleIsEditingSectionChange" />
	}
	else
	{
		<MudAlert Severity="Severity.Error" Dense="true">The template was not found.</MudAlert>
	}
}