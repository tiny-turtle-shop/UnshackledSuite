@page "/member/remove-password"
@inherits DeletePasswordBase

<DynamicPageTitle Title="Remove Password" />

<MudBreadcrumbs Items="@Breadcrumbs" />

<MudText Typo="Typo.h4" Class="mb-4">Remove Password</MudText>

<MudText Typo="Typo.subtitle1" Class="mb-6">
	You have a local password for this site and an external login. You can remove the local password so you can only log in with the external login.
</MudText>

<EditForm Model="@Model" OnValidSubmit="HandleFormSubmitted">
	<FluentValidationValidator Validator="ModelValidator"></FluentValidationValidator>
	<MudGrid Spacing="2" Justify="Justify.SpaceAround">
		<MudItem xs="12" md="6" lg="4">
			<MudTextField Label="Current Password" Variant="Variant.Outlined" Disabled="@DisableControls" Required="true"
						  FullWidth="true" InputType="InputType.Password" @bind-Value="@Model.OldPassword" For="@(() => Model.OldPassword)" />
		</MudItem>
	</MudGrid>
	<MudToolBar Gutters="false" Class="mt-4">
		<MudSpacer />
		<ProgressButton Color="Color.Secondary" Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@DisableControls"
						IsWorking="@IsWorking" WorkingText="Saving...">Remove</ProgressButton>
		<MudButton Color="Color.Secondary" Variant="Variant.Outlined" Disabled="@DisableControls" Href="/member">Cancel</MudButton>
		<MudSpacer />
	</MudToolBar>
</EditForm>