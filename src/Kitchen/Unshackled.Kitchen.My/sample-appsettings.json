{
	"AllowedHosts": "*",
	"AuthenticationProviders": {
		"MicrosoftClientId": "",
		"MicrosoftClientSecret": ""
	},
	"ConnectionStrings": {
		"DefaultDatabase": "Data Source=Data/unshackled-kitchen.sqlite"
	},
	"DbConfiguration": {
		"DatabaseType": "sqlite",
		"TablePrefix": "uk_"
	},
	"HashIdConfiguration": {
		"Alphabet": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890",
		"Salt": "randomstringofcharacters",
		"MinLength": 12
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"SiteConfiguration": {
		"SiteName": "Unshackled Kitchen",
		"AppThemeColor": "#236441",
		"AllowRegistration": true,
		"RequireConfirmedAccount": true,
		"ApplyMigrationsOnStartup": true,
		"PasswordStrength": {
			"RequireDigit": true,
			"RequireLowercase": true,
			"RequireNonAlphanumeric": true,
			"RequireUppercase": true,
			"RequiredLength": 10,
			"RequiredUniqueChars": 7
		}
	},
	"SmtpSettings": {
		"Host": "smtp.host.domain",
		"Port": 587,
		"UseSSL": true,
		"DefaultReplyTo": "email@domain.com",
		"Username": "",
		"Password": ""
	}
}
