<MudSelect T="bool" Label="Status" FullWidth="true" Variant="Variant.Outlined" 
		Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">
	<MudSelectItem T="bool" Value="@false">Active</MudSelectItem>
	<MudSelectItem T="bool" Value="@true">Archived</MudSelectItem>
</MudSelect>

@code {
	[Parameter] public bool Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<bool> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.Normal;
}
