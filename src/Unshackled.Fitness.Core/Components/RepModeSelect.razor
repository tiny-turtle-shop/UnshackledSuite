<MudSelect T="RepModes" Label="Rep Mode" FullWidth="true" Variant="Variant.Outlined" Immediate="true"
		   Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">
	<MudSelectItem T="RepModes" Value="@RepModes.Exact">@RepModes.Exact.Title()</MudSelectItem>
	<MudSelectItem T="RepModes" Value="@RepModes.ToFailure">@RepModes.ToFailure.Title()</MudSelectItem>
</MudSelect>

@code {
	[Parameter] public RepModes Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<RepModes> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.None;
}
