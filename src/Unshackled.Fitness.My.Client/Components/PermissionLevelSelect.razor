<MudSelect T="PermissionLevels" Label="Permission Level" FullWidth="true" Variant="Variant.Outlined"
		   Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">
	@foreach (var item in EnumUtils.GetValues<PermissionLevels>())
	{
		<MudSelectItem T="PermissionLevels" Value="@item">@item.Title()</MudSelectItem>
	}
</MudSelect>

@code {
	[Parameter] public PermissionLevels Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<PermissionLevels> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.Normal;
}