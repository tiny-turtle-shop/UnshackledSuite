@inherits FormPropertiesBase

<EditForm id="@FormId" Model="@Model" OnValidSubmit="HandleFormSubmitted">
	<FluentValidationValidator Validator="ModelValidator"></FluentValidationValidator>
	<MudGrid Spacing="1" Class="mb-4">
		<MudItem xs="12">
			<MudTextField Label="Title" Variant="Variant.Outlined" Immediate="true" Disabled="@DisableControls"
						  FullWidth="true" For="@(() => Model.Title)" @bind-Value="@Model.Title" />
		</MudItem>
		<MudItem xs="12">
			<MudSelect T="string" Variant="Variant.Outlined" Label="Store" @bind-Value="@Model.StoreSid">
				<MudSelectItem T="string" Value="@null">-- Not Set --</MudSelectItem>
				@foreach (var store in Stores)
				{
					<MudSelectItem T="string" Value="@store.Sid">@store.Title</MudSelectItem>
				}
			</MudSelect>
		</MudItem>
	</MudGrid>

	@if (FormToolbar != null)
	{
		<MudToolBar Gutters="false" Class="mt-4">
			@FormToolbar
		</MudToolBar>
	}
</EditForm>

