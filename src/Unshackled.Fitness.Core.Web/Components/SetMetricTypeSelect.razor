<MudSelect T="SetMetricTypes" Label="@Label" FullWidth="true" Variant="Variant.Outlined" 
		Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">
	@foreach (var item in EnumUtils.GetSortedValues<SetMetricTypes>())
	{
		<MudSelectItem T="SetMetricTypes" Value="@item">@item.Title()</MudSelectItem>
	}
</MudSelect>

@code {
	[Parameter] public string Label { get; set; } = "Metric Type";
	[Parameter] public SetMetricTypes Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<SetMetricTypes> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.Normal;
}
